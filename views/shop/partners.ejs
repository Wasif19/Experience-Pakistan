<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Our Partners</title>
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Montserrat:wght@400;500;600;700;800;900&family=Nanum+Gothic:wght@400;700;800&display=swap"
      rel="stylesheet"
    />

    <link rel="icon" href="/images/favicon.ico" type="image/x-icon" />
    <link rel="shortcut icon" href="/images/favicon.ico" type="image/x-icon" />

    <link rel="stylesheet" href="/css/headerFooter.css" />
    <link rel="stylesheet" href="/css/partners.css" />
    <link rel="stylesheet" href="css/artists.css" />
    <link rel="stylesheet" href="/css/navbar.css" />

    <style></style>

    <script
      src="https://kit.fontawesome.com/9d779ebc01.js"
      crossorigin="anonymous"
    ></script>
    <link href="https://unpkg.com/aos@2.3.1/dist/aos.css" rel="stylesheet" />
    <script src="https://unpkg.com/aos@2.3.1/dist/aos.js"></script>
  </head>
  <body>
    <!-- ----------------- Header ---------------------- -->
    <%- include('../includes/header.ejs') %>
    <!-- ----------------- Our Partners Section ---------------------- -->

    <main class="container">
      <section class="partners">
        <h1>Our Partners</h1>
      </section>

      <% if (partners.length == 0){%>
      <div class="noRecord record-center">
        <h2>No Partners Found</h2>
        <img
          style="width: 250px"
          src="/images/he_sitting_with_notebook.png"
          alt=""
        />
      </div>
      <%} %>

      <section class="flex wrapper gap-large partner-main">
        <% for (let partner of partners) { %>
        <div
          class="partner-box flex-col"
          data-aos="fade-up"
          data-aos-anchor-placement="center-bottom"
        >
          <span>
            <img class="flex flex-centers" src="<%=partner.logo %>" alt=""
          /></span>

          <div class="overlay">
            <button
              class="view-events"
              onclick="window.location.href='/partners/<%=partner._id%>'"
            >
              View Events
            </button>
          </div>

          <div class="partner-box-body">
            <h2><%=partner.organizationName %></h2>
            <p><%=partner.description %></p>
          </div>
        </div>
        <% } %>
      </section>
      <div class="page">
        <% if (currentPage !== 1) { %>
        <a href="/partners?page=1">1</a>
        <% } %>
        <a href="/partners?page=<%= currentPage %>" class="active"
          ><%= currentPage %></a
        >
        <% if (hasNextPage) { %>
        <a href="/partners?page=<%= nextPage %>"><%= nextPage %></a>
        <% } %>
        <a href="/partners?page=<%= lastPage %>"
          ><i class="fa-solid fa-chevron-right"></i
        ></a>
      </div>
    </main>

    <!-- ----------------- Call to Action Section ---------------------- -->

    <%- include('../includes/newsletter.ejs') %>

    <!-- ----------------- Footer Section ---------------------- -->

    <%- include('../includes/footer.ejs') %>
  </body>
</html>
